{
  "expo": {
    "name": "RIVE Learning App",
    "slug": "rive-learning-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#E8E4F3"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rivelearning.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E8E4F3"
      },
      "package": "com.rivelearning.app"
    },
    "web": {
      "bundler": "metro"
    },
    "scheme": "rivelearningapp",
    "plugins": [
      "expo-router",
      "expo-asset",
      "./plugins/withKotlinVersion.js",
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "1.9.25"
          }
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "e86ddba9-5d0c-4467-9b11-dc42ae2d8a82"
      }
    }
  }
}